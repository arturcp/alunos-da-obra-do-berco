<main>
  <header class="header-students">
    <h1 class="title">Alunos da Obra do Berço</h1>
    <%= image_tag('student.svg', alt:'alunos da obra do berço', class: 'img-student') %>
  </header>

  <div class="table-responsive border">
    <table class="table">
      <thead>
        <tr class="tr-color">
          <th scope="col">Nome</th>
          <th scope="col">Email</th>
          <th scope="col">Gênero</th>
          <th scope="col">Telefone</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td>
              <%= student.name %>
            </td>
            <td>
              <%= student.email %>
            </td>
            <td>
              <%= (student.gender.zero? ? 'M' : 'F') if student.gender %>
            </td>
            <td>
              <%= student.mobile_phone %>
            </td>
            <td>
              <%= link_to 'Ver' , student_path(student) %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</main>
