<main class="default-page">
  <header>
    <h1>Alunos da Obra do Berço</h1>
    <img src="../../assets/images/student.svg" alt="alunos da obra do berço" />
  </header>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Email</th>
        <th scope="col">Gênero</th>
        <th scope="col">Telefone</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td>
            <%= student.name %>
          </td>
          <td>
            <%= student.email %>
          </td>
          <td>
            <%= student.gender %>
          </td>
          <td>
            <%= student.mobile_phone %>
          </td>
          <td>
            <%= link_to 'Editar' , student_path(student) %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</main>